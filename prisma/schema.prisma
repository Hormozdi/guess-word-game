generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id           Int        @id @default(autoincrement())
  telegramId   Int        @unique
  username     String?
  phone        String?
  goldCredit   Float      @default(0)
  silverCredit Float      @default(0)
  UserMeta     UserMeta[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model UserMeta {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  meta      String
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GuessWordGame {
  id        Int                   @id @default(autoincrement())
  word      String
  status    GuessWordGameStatus   @default(NEW)
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  players   GuessWordGamePlayer[]
}

model GuessWordGamePlayer {
  id             Int           @id @default(autoincrement())
  game           GuessWordGame @relation(fields: [gameId], references: [id])
  gameId         Int
  telegramId     Int
  messageId      Int
  correctLetters Json?
  wrongLetters   Json?
}

enum GuessWordGameStatus {
  NEW
  PLAYING
  DONE
}
